<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="opwoco_bootstrap.twig.extension.initializr.class">opwoco\Bundle\BootstrapBundle\Twig\InitializrTwigExtension</parameter>
    </parameters>

    <services>
        <service id="opwoco_bootstrap.twig.extension.initializr" class="%opwoco_bootstrap.twig.extension.initializr.class%">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
