{# valid values for scale are: 'lg' , '2x' , '3x' , '4x' , '5x' #}
{% block fa -%}
<i class="fa fa-{{ icon }}{{ inverted ? ' fa-inverse' : '' }}{{ scale ? ' scale-' ~  scale : '' }}"></i>
{%- endblock %}

{% block glyphicon -%}
<span class="glyphicon glyphicon-{{ icon }}{{ scale ? ' scale-' ~  scale : '' }}{{ inverted ? ' color-inverse' : '' }}"></span>
{%- endblock %}

{% block ion -%}
    <i class="icon ion-{{ icon }}{{ scale ? ' scale-' ~  scale : '' }}{{ inverted ? ' color-inverse' : '' }}"></i>
{%- endblock %}

{% block octicon -%}
    <span class="octicon octicon-{{ icon }}{{ scale ? ' scale-' ~  scale : '' }}{{ inverted ? ' color-inverse' : '' }}"></span>
{%- endblock %}

{% block foundation -%}
    <span class="fi-{{ icon }}{{ scale ? ' scale-' ~  scale : '' }}{{ inverted ? ' color-inverse' : '' }}"></span>
{%- endblock %}